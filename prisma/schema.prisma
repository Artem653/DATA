datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())

  // Зв’язок "багато до багатьох" через таблицю PostTag
  tags PostTag[]
}

model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique

  // Зв’язок з PostTag
  posts PostTag[]
}

model PostTag {
  id     Int  @id @default(autoincrement())
  post   Post @relation(fields: [postId], references: [id])
  postId Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int
}